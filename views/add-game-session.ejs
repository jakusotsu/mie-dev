<%- include('partials/header.ejs') %>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 90%;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        color: #333;
        margin-bottom: 20px;
    }

    img {
        max-width: 100%;
        max-height: 40vh;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .button-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .button {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
        text-decoration: none;
        color: #fff;
    }

    .add-session-button {
        background-color: #3498db;
    }

        .add-session-button:hover {
            background-color: #2980b9;
        }

    .delete-button {
        background-color: #e74c3c;
    }

        .delete-button:hover {
            background-color: #c0392b;
        }

    .form-container {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-size: 16px;
        color: #333;
    }

    input[type="date"] {
        width: calc(100% - 22px);
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .submit-button {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
        text-decoration: none;
        color: #fff;
        background-color: #3498db;
    }

        .submit-button:hover {
            background-color: #2980b9;
        }

    .cancel-button {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
        text-decoration: none;
        color: #fff;
        background-color: #e74c3c;
        margin-left: 10px;
    }

        .cancel-button:hover {
            background-color: #c0392b;
        }
</style>

<div class="container">
    <h1><%= boardgame.name %></h1>
    <img src="<%= boardgame.image %>" alt="<%= boardgame.name %>">

    <div class="form-container">
        <form action="/add-game-session/<%= boardgame.id %>" method="POST">
            <div class="form-group">
                <label for="session-date">Session Date:</label>
                <input type="date" id="session-date" name="session_date" required>
                <input type="hidden" id="boardgame-id" name="boardgame_id" value="<%= boardgame.id %>" required>
            </div>
            <div class="button-container">
                <button type="submit" class="submit-button">Add New Session</button>
                <a href="/edit-game/<%= boardgame.id %>" class="cancel-button">Cancel</a>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer.ejs') %>
